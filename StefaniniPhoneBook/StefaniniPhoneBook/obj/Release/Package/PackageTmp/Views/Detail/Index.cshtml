@model IEnumerable<StefaniniPhoneBook.Models.Detail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            DetailType
        </th>
        <th>
            Contact
        </th>
        <th>
            DetailData
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DetailType.DetailTypeData)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DetailData)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DetailID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DetailID })
        </td>
    </tr>
}

</table>
