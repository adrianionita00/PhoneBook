@model StefaniniPhoneBook.Models.Detail

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Detail</legend>

        @Html.HiddenFor(model => model.DetailID)

        <div class="editor-label">
            @Html.LabelFor(model => model.DetailTypeID, "DetailType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DetailTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.DetailTypeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContactID, "Contact")
        </div>

        <div class="editor-field">
            @Html.DropDownList("ContactID", String.Empty)
            @Html.ValidationMessageFor(model => model.ContactID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DetailData)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DetailData)
            @Html.ValidationMessageFor(model => model.DetailData)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
   
